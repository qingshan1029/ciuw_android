<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@drawable/login_bkg"
    android:weightSum="1"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/registerWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.38"
            android:background="@drawable/login_bkg_header">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:tint="@color/whiteTextColor"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_back">
            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_logo"
                android:layout_centerInParent="true">
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.62"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="vertical">
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="bottom"
                        android:textSize="@dimen/primaryTextViewSizeMin"
                        android:text="@string/login_email"/>
                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/primaryControlSize"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:textSize="@dimen/primaryEditTextSizeMin">
                    </EditText>
                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="bottom"
                        android:textSize="@dimen/primaryTextViewSizeMin"
                        android:text="@string/login_password"/>
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/primaryControlSize"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:textSize="@dimen/primaryEditTextSizeMin">
                    </EditText>
                    <TextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="bottom"
                        android:textSize="@dimen/primaryTextViewSizeMin"
                        android:text="@string/login_first_name"/>
                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/primaryControlSize"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:textSize="@dimen/primaryEditTextSizeMin">
                    </EditText>
                    <TextView
                        android:id="@+id/tv_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="bottom"
                        android:textSize="@dimen/primaryTextViewSizeMin"
                        android:text="@string/login_last_name"/>
                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/primaryControlSize"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:textSize="@dimen/primaryEditTextSizeMin">
                    </EditText>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"/>
                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/primaryButtonSize"
                        android:layout_marginTop="5dp"
                        android:background="@color/login_btn_bk_color"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="@dimen/primaryButtonTextSize"
                        android:text="@string/login_btn_register"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

